{
    "manifest_version": 3,
    "name": "SÃ¦fe Box",
    "version": "1.0.0",
    "description": "Launch secure, isolated browser-based sessions that leave no trace",
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon64.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": [
      "storage",
      "tabs",
      "contextMenus",
      "notifications"
    ],
    "host_permissions": [
      "http://localhost:8000/*",
      "http://localhost:8001/*",
      "http://localhost:8002/*",
      "http://localhost:4000/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "popup.html",
          "popup.js",
          "viewer-upload.html",
          "viewer-upload.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
}